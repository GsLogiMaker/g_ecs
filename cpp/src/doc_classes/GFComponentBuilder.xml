<?xml version="1.0" encoding="UTF-8" ?>
<class name="GFComponentBuilder" inherits="GFEntityBuilder" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/godotengine/godot/master/doc/class.xsd">
	<brief_description>
		Builder for a new component type.
	</brief_description>
	<description>
		This example shows the creation of a [i]Jump[/i] component:
		[codeblock]
		GFComponentBuilder.new() \
		    .set_name("Jump") \
		    .add_member("jump_velocity", TYPE_FLOAT) \
		    .build()
		[/codeblock]
	</description>
	<tutorials>
		<link title="More on Flecs Components">https://www.flecs.dev/flecs/md_docs_2EntitiesComponents.html#components-1</link>
	</tutorials>
	<methods>
		<method name="add_entity">
			<return type="GFComponentBuilder" />
			<param index="0" name="entity" type="Variant" />
			<description>
				Overrides [method GFEntityBuilder.add_entity].
			</description>
		</method>
		<method name="add_member">
			<return type="GFComponentBuilder" />
			<param index="0" name="member" type="String" />
			<param index="1" name="type" type="int" enum="Variant.Type" />
			<description>
				Adds a member to the new component.
				TODO: Add code examples.
			</description>
		</method>
		<method name="add_pair">
			<return type="GFComponentBuilder" />
			<param index="0" name="first" type="Variant" />
			<param index="1" name="second" type="Variant" />
			<description>
				Overrides [method GFEntityBuilder.add_pair].
			</description>
		</method>
		<method name="build">
			<return type="GFEntity" />
			<description>
				Builds the new component and returns a reference to it.
				Overrides [method GFEntityBuilder.build].
			</description>
		</method>
		<method name="get_member_count" qualifiers="const">
			<return type="int" />
			<description>
				Returns the number of members the new component will have added to it.
				TODO: Add code examples.
			</description>
		</method>
		<method name="new_in_world" qualifiers="static">
			<return type="GFComponentBuilder" />
			<param index="0" name="world" type="GFWorld" />
			<description>
				Overrides [method GFEntityBuilder.new_in_world].
			</description>
		</method>
		<method name="set_name">
			<return type="GFComponentBuilder" />
			<param index="0" name="name" type="Variant" />
			<description>
				Overrides [method GFEntityBuilder.set_name].
			</description>
		</method>
		<method name="set_parent">
			<return type="GFComponentBuilder" />
			<param index="0" name="entity" type="Variant" default="0" />
			<description>
				Overrides [method GFEntityBuilder.set_parent].
			</description>
		</method>
		<method name="set_target_entity">
			<return type="GFComponentBuilder" />
			<param index="0" name="entity" type="Variant" />
			<description>
				Overrides [method GFEntityBuilder.set_target_entity].
			</description>
		</method>
	</methods>
</class>
